<?xml version="1.0" encoding="utf-8" ?>

<ContentView
    x:Class="MauiAppCollectionViewItemSizeWithRefreshView.ItemView"
    x:DataType="local:ItemViewModel"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:local="clr-namespace:MauiAppCollectionViewItemSizeWithRefreshView"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <ContentView Padding="10">
        <ContentView BackgroundColor="#88D3D3D3" Padding="5">
            <VerticalStackLayout Spacing="6">
                <Label Text="Default line" />
                <Label IsVisible="{Binding ShowTextLine1}" Text="{Binding TextLine1}" />
                <Label IsVisible="{Binding ShowTextLine2}" Text="{Binding TextLine2}" />
                <Label IsVisible="{Binding ShowTextLine3}" Text="{Binding TextLine3}" />
            </VerticalStackLayout>
        </ContentView>
    </ContentView>
</ContentView>